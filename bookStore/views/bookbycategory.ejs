<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get a single book form the category</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header>
      <a href="/" class="logo">Book.<span>store</span></a>
      <nav>
        <ul>
          <li><a href="/" class="menu-btn">home</a></li>
          <li><a href="/books" class="menu-btn">all-books</a></li>
          <li>
            <a href="/books/fiction/category" class="menu-btn">fiction</a>
          </li>
          <li>
            <a href="/books/technology/category" class="menu-btn">technology</a>
          </li>
          <li>
            <a href="/books/adventure/category" class="menu-btn">adventure</a>
          </li>
          <li>
            <a href="/books/motivation/category" class="menu-btn">motivation</a>
          </li>
          <li><a href="/books/new" class="menu-btn btn">new book</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <section class="single-book">
        <% category.forEach(category=>{%>
        <div class="book-card-container">
          <% category.books.forEach(book => { %>
          <h2 class="Book-heading"><%=book.title%></h2>
          <% })%>
          <div class="additional-information">
            <% category.books.forEach(book => { %>
            <a href="/book._id" class="readmore">readmore</a>
            <% })%>
          </div>
        </div>
        <% })%>
      </section>
    </main>
  </body>
</html>
